{
  "name": "nook-desktop",
  "version": "1.0.11",
  "description": "Nook desktop",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "standard --fix && electron .",
    "pack": "electron-builder --dir",
    "dist": "env-cmd electron-builder",
    "release": "env-cmd electron-builder",
    "lint": "standard"
  },
  "author": "pheeef <phil@philsoft.at>",
  "homepage": "https://gitlab.lv8.at/phil/nook-dekstop/",
  "license": "ISC",
  "build": {
    "extraResources": [
      "./build/icons/**"
    ],
    "productName": "Nook",
    "appId": "at.lv8.nookdesktop",
    "mac": {
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}Setup.${ext}",
      "icon": "build/icons/nook.icns",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.music"
    },
    "win": {
      "artifactName": "${productName}Setup.${ext}",
      "icon": "build/icons/nook.png",
      "target": [
        "nsis-web"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "publish": {
    "provider": "github"
  },
  "nsis": {
    "installerIcon": "build/icons/nook.png",
    "uninstallerIcon": "build/icons/nook.png",
    "artifactName": "${productName}Setup.${ext}"
  },
  "dmg": {
    "icon": "build/icons/nook.icns",
    "sign": false
  },
  "devDependencies": {
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "standard": "^17.1.0"
  },
  "dependencies": {
    "async": "^3.2.5",
    "dotenv": "^17.2.0",
    "electron-json-storage": "^4.6.0",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.1.8",
    "lodash": "^4.17.21",
    "superagent": "^10.2.2",
    "uuid": "^11.1.0"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "standard": {
    "ignore": [
      "howler.min.js",
      "wad.js"
    ]
  }
}
